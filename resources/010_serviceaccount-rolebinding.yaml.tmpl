---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: $SERVICEACCOUNT_NAME
  namespace: openshift-monitoring
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: $SERVICEACCOUNT_NAME
  namespace: openshift-monitoring
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: edit
subjects:
- kind: ServiceAccount
  name: $SERVICEACCOUNT_NAME
  namespace: openshift-monitoring
